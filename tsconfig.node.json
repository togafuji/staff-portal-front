{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["vite.config.*", "vitest.config.*", "tests/**/*.ts"]
}
